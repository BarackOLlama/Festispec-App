<Window x:Class="FSBeheer.View.CreateEditCustomerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSBeheer.View"
        mc:Ignorable="d"
        DataContext="{Binding CreateEditCustomer, Source={StaticResource Locator}}"
        Title="CreateCustomerView" Height="450" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="InterfaceButtonTemplate" TargetType="Button">
            <Button FontSize="15" Margin="5"
                    Content="{TemplateBinding Content}"
                    Command="{TemplateBinding Command}"/>
        </ControlTemplate>

    </Window.Resources>

    <StackPanel Margin="20">
        <StackPanel Name="spBackButton" HorizontalAlignment="Left">
            <Button Content="Back" Template="{StaticResource InterfaceButtonTemplate}"></Button>
        </StackPanel>
        <StackPanel Name="spContent" Margin="30">
            <Grid Margin="2,2,2,2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,0,0,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Customer" FontSize="28" Grid.Column="0" FontWeight="Bold"/>
                    <Button Command="{Binding SaveCommand}" Grid.Column="1" CommandParameter="{Binding ElementName=EditWindows}">Save</Button>
                    <Button Command="{Binding AddAnswerToQuestionCommand}" Grid.Column="2" CommandParameter="{Binding ElementName=EditWindows}">Add</Button>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBlock Text="Name" Margin="0,5,0,0" Height="20"/>
                </Grid>
                <Grid Grid.Row="2">
                    <TextBlock Text="{Binding Customer.Name}" Height="20"/>
                </Grid>
                <Grid Grid.Row="3">
                    <TextBlock Text="Else" Margin="0,5,0,0" Height="20"/>
                </Grid>
                <Grid Grid.Row="4">
                    <TextBlock Text="{Binding Customer.Else}" Height="20"/>
                </Grid>
                <Grid Grid.Row="5">
                    <TextBlock Text="Text:" Margin="0,5,0,0" Height="20"/>
                </Grid>
                <Grid Grid.Row="6">
                    <TextBox MaxLength="50" Text="{Binding Customer.Info, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                </Grid>
            </Grid>
        </StackPanel>
        <StackPanel Name="spInterfaceButtons" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Orientation="Horizontal" Margin="0,0,25,0">
            <Button Content="Edit" Template="{StaticResource InterfaceButtonTemplate}"></Button>
            <Button Content="New" Template="{StaticResource InterfaceButtonTemplate}"></Button>
        </StackPanel>
    </StackPanel>
</Window>
