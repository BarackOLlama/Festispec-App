<Window x:Class="FSBeheer.View.CustomerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSBeheer.View"
        mc:Ignorable="d"
        Title="CustomerListWindow" Height="450" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Border Grid.ColumnSpan="2" Margin="0,0,-0.4,0" Background="LightGray">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="110" />
                        <ColumnDefinition Width="10" />

                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Customer Window" FontSize="28" FontWeight="ExtraBold" Grid.Column="0" Margin="15,6,0,0"/>
                    <Button Width="50" Height="50" FontSize="16" Content="Something" 
                        Foreground="White" Background="#FFDA8229" Margin="0,3,0,0"
                        Grid.Column="1" Command="{Binding Something}">
                    </Button>
                    <Button Width="50" Height="50" FontSize="28" Content="Something" Margin="0,3,0,0"
                        Foreground="White" FontWeight="Bold" 
                        Grid.Column="3"  Command="{Binding Something}">
                    </Button>
                    <Button Width="110" Height="50" FontSize="16" Content="Something" Margin="0,3,0,0"
                        Foreground="White" 
                        Grid.Column="5"  Command="{Binding Something}">
                    </Button>
                </Grid>

                <DataGrid AutoGenerateColumns="False" IsReadOnly="True" SelectedItem="{Binding SelectedQuiz, Mode=TwoWay}" 
                      ItemsSource="{Binding QuizCollection}" Margin="0,6,0,0" BorderBrush="#FF979494"
                      GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#FFF0E0E0" HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Foreground="#FF1D1616" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                        <DataGridTemplateColumn Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>

                                    <!--binnen de datagrid bind je op selectedquiz dus kun je niet naar de main context kijken.
                                Hij kijkt nu naar de quizviewmodel context ipv main daarom roep je eerst datacontext aan. Relativesource= zonder dit weet hij niet welke datacontext hij moet zoeken, kijken naar boven
                                helpt bij het zoeken naar de juiste datacontext relativesource-->

                                    <Button Command="{Binding DataContext.EditQuizWindowCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    BorderThickness="1" BorderBrush="#FF999A9B" Foreground="White" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="20" Background="#FF6F9BDA">Edit Quiz</Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="70">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.DeleteQuizCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        BorderThickness="1" BorderBrush="#FF999A9B" Foreground="White" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="60" Height="20" Background="#FFD45134">Delete</Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </ScrollViewer>
</Window>
