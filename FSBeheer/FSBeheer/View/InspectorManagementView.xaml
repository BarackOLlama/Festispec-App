<Window x:Class="FSBeheer.View.InspectorManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSBeheer.View"
        mc:Ignorable="d"
        Title="InspectorManagementView" Height="600" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="InterfaceButtonTemplate" TargetType="Button">
            <Button FontSize="15" Margin="5"
                    Content="{TemplateBinding Content}"
                    Command="{TemplateBinding Command}"/>
        </ControlTemplate>
    </Window.Resources>

    <StackPanel Margin="20">
        <StackPanel Name="spBackButton" HorizontalAlignment="Left"/>
        <TextBox Width="673" HorizontalAlignment="Left" Height="30" Margin="40,0,0,0"/>
        <StackPanel Name="spContent" Margin="40,0,40,0" Height="400">
            <DataGrid  Height="400">
                
            </DataGrid>
        </StackPanel>


        <StackPanel x:Name="spInterfaceButtons" VerticalAlignment="Bottom"
                    Orientation="Horizontal" Margin="594,0,25,0">
            <Button Template="{StaticResource InterfaceButtonTemplate}">
                <Button Content="Button" Width="75"/>
            </Button>
            <Button Content="New" Template="{StaticResource InterfaceButtonTemplate}"/>
        </StackPanel>
    </StackPanel>

</Window>
