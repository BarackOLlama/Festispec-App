<Window x:Class="FSBeheer.View.EventManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FSBeheer.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      x:Name="EventManagementViewName"
      Title="EventManagementView"
      DataContext="{Binding EventManagement, Source={StaticResource Locator}}">
    <Window.Resources>
        <ControlTemplate x:Key="InterfaceButtonTemplate" TargetType="Button">
            <Button FontSize="15" Margin="5"
                    Content="{TemplateBinding Content}"
                    Command="{TemplateBinding Command}"
                    CommandParameter="{TemplateBinding CommandParameter}"/>
        </ControlTemplate>
        <ControlTemplate x:Key="SearchTextBox" TargetType="TextBox">
            <TextBox FontSize="15" Width="300"
                     Text="{TemplateBinding Text}"/>
        </ControlTemplate>
        <ControlTemplate x:Key="SearchButton" TargetType="Button">
            <Button FontSize="15"
                    Content="{TemplateBinding Content}"
                    Command="{TemplateBinding Command}"
                    CommandParameter="{TemplateBinding CommandParameter}"/>
        </ControlTemplate>
    </Window.Resources>

    <StackPanel Margin="20">
        <StackPanel Name="spBackButton" HorizontalAlignment="Left">
            <Button Content="Back"
                    Command="{Binding BackHomeCommand}"
                    CommandParameter="{Binding ElementName=EventManagementViewName}"
                    Template="{StaticResource InterfaceButtonTemplate}"/>
        </StackPanel>
        <StackPanel Name="spContent" Margin="30">
            <StackPanel Name="spFilter" Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox Name="txtSearchInput" Template="{StaticResource SearchTextBox}"
                         Text="{Binding FilterText, Mode=TwoWay}"/>
                <Button Content="Filter" Template="{StaticResource SearchButton}"
                        Command="{Binding FilterListCommand}"/>
            </StackPanel>
            <DataGrid ItemsSource="{Binding Events}" MaxHeight="250" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Naam" Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Name="spInterfaceButtons" VerticalAlignment="Bottom" HorizontalAlignment="Right"                    
                    Orientation="Horizontal" Margin="0,0,25,0">
            <Button Content="Edit" Template="{StaticResource InterfaceButtonTemplate}"></Button>
            <Button Content="New" Template="{StaticResource InterfaceButtonTemplate}"></Button>
        </StackPanel>
    </StackPanel>
</Window>
